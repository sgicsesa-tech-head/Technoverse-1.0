# Server Configuration
PORT=5000

# Email Configuration (Gmail)
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-specific-password

# Firebase Configuration
# For Production (Vercel): Set FIREBASE_SERVICE_ACCOUNT as a single-line JSON string
# FIREBASE_SERVICE_ACCOUNT={"type":"service_account","project_id":"...","private_key":"..."}

# For Development: Path to your Firebase service account JSON file
# GOOGLE_APPLICATION_CREDENTIALS=./firebase-service-account.json

# Google Drive Configuration (FREE - Recommended for file storage)
# For Production (Vercel): Set GOOGLE_SERVICE_ACCOUNT as a single-line JSON string
# GOOGLE_SERVICE_ACCOUNT={"type":"service_account","project_id":"...","private_key":"..."}

# For Development: Use the same credentials file as Firebase
# GOOGLE_APPLICATION_CREDENTIALS=./firebase-service-account.json

# Google Drive Folder ID (where transaction screenshots will be uploaded)
GOOGLE_DRIVE_FOLDER_ID=your-google-drive-folder-id

# Make uploaded files publicly accessible (true/false)
DRIVE_MAKE_PUBLIC=false

# Vercel Detection (automatically set by Vercel)
# VERCEL=1
